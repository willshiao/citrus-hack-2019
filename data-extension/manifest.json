{
  "name": "Fake Block",
  "version": "1.0",
  "description": "Blocks unwanted information on Twitter",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "https://fakeblock.org/"
  ],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_security_policy": "default-src 'self';connect-src 'self' https://* http://*;",
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "48": "images/logo48.png",
      "128": "images/logo128.png"
    }
  },
  "content_scripts":[{
    "css": ["lib/particles.css"],
    "js": ["lib/jquery.js", "lib/anime.min.js", "lib/particles.js", "content.js"],
    "matches": ["https://twitter.com/*"]
  }],
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "manifest_version": 2
}
